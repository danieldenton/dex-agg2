{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule":true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/components/App.tsx", "global.d.ts"],
  "exclude": ["dist", "node_modules"]
}